
<div class="row">
  <div class="span4">
    <div class="bs-docs">
      <h2>My feed</h2>
      <% @photos.first(5).each do |photo| %>
        <a href="#"><img class="img-polaroid" src="<%= "/images/photos/"+photo.id.to_s+"/medium/"+photo.photo_file_name %>" alt="<%= photo.photo_file_name %>"></a>
      <% end %>
    </div>
  </div>
  <div class="span4">
    <div class="bs-docs">
      <h2>Following</h2>
    </div>

  <div class="span4">
    <div class="bs-docs">
      <h2>TEMPORARY</h2>
      <div id="templist">
      </div>
    </div>
  </div>



  </div>
  <div class="span3">
    <div class="span3">
      <div class="bs-docs">
        <form action='/profile' class="form-signin" method="POST">
          <input type="text" id="firstname" class="input-block-level" value="<%= @first %>" name="first_name">
          <input type="text" id="lastname"  class="input-block-level" value=<%= @last %> name = "last_name">
          <input type="text" id="email"  class="input-block-level" value=<%= @email %> name = "email_address">
          <button class="btn btn-large btn-primary" type="submit">Update</button>
        </form>
      </div>
    </div>
    <div class="span3">
      <div class="bs-docs">
        <h2 class="text-info" >Following:</h2>
        <ul>
          <li>user1</li>
          <li>user2</li>
          <li>user3</li>
          <li>user4</li>
        </ul>
      </div>
    </div>
    <div class="span3">
      <div class="bs-docs">
        <h2 class="text-info">Followers:</h2>
        <ul>
          <li>user5</li>
          <li>user6</li>
          <li>user7</li>
          <li>user8</li>
        </ul>
      </div>
    </div>
  </div>
</div>
<script>
// Create the users list...
jQuery.get('/users', function(response){
  var test=document.getElementById('templist');
  var ul=document.createElement('ul');
  test.appendChild(ul);

  var userArray = response.allusers
  console.log(userArray)
  for (var i=0; i<userArray.length; i++)
      {
      var li=document.createElement('li');
      ul.appendChild(li);
      li.innerHTML="<a href='/follow/"+userArray[i]+"'>"+li.innerHTML + userArray[i]+"</a>";
      }
});

// create a follower when the link is clicked







</script>