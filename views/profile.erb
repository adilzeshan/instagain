<div class="row">
  <div class="span4">
    <div class="bs-docs">
      <h3 class="title">My feed</h3>
      <div class="my-feed">
        <div class="span3 left">
          <% @myphotos.each do |photo| %>
            <div class="medium-photo" data-user="<%= h photo.user.user_name %>">
              <a id="single_<%= h @myphotos.index(photo) %>" class="fancybox-button" rel="fancybox-button" data-thumbnail="<%= h photo.photo.url(:medium) %>" href="<%= h photo.photo.url(:big) %>" title="<%= h photo.user.user_name %> - <%= h photo.photo_file_name[0...-4] %>">
                <img class="img-polaroid" data-user="<%= h photo.user.user_name %>" src="<%= h photo.photo.url(:medium) %>" alt="<%= h photo.photo_file_name %>">
              </a>
              <div class="label labelbottom">
                <strong class="name"></strong>
                <a class="delete text-error text-delete" onclick="window.location.reload( true );" href="/delete/<%= h photo.id %>"><strong>delete</strong></a>
                <a class="profile"></a>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="span4">
    <div class="bs-docs">
      <h3 class="title">Following</h3>
      <div class="my-feed">
        <div class="span3 right">
          <% @followingphotos.each do |photo| %>
            <div class="medium-photo" data-user="<%= h photo.user.user_name %>">
              <a id="single_<%= h @followingphotos.index(photo) %>" class="fancybox-button" rel="fancybox-button" data-thumbnail="<%= h photo.photo.url(:medium) %>" href="<%= h photo.photo.url(:big) %>" title="<%= h photo.user.user_name %> - <%= h photo.photo_file_name[0...-4] %>">
              <img class="img-polaroid" src="<%= h photo.photo.url(:medium) %>" alt="<%= h photo.photo_file_name %>">
              </a>
              <div class="label labelbottom">
                <strong class="name"><%= h photo.user.user_name %></strong>
                <a class="follow" onclick="window.location.reload( true );" href="/unfollow/<%= h photo.user.user_name %>">unfollow</a>
                <a class="profile" onclick="window.location.reload( true );" href="/profile/<%= h photo.user.user_name %>">profile</a>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="span3">
    <div class="span3">
      <div class="bs-docs">
        <div class="profile">
          <form action='/profile' class="form-signin" method="POST" id="profileForm">
            <input type="text" id="firstname" class="input-block-level" value="<%= h @first %>" name="first_name">
            <input type="text" id="lastname"  class="input-block-level" value=<%= h @last %> name = "last_name">
            <input type="text" id="email"  class="input-block-level" value=<%= h @email %> name = "email_address">
            <button class="btn btn-large btn-primary" type="submit" onClick="">Update</button>
          </form>
          <div class="warning">
            <strong class="delete text-error text-delete">PROFILE CHANGED</strong>
          </div>
        </div>
      </div>
    </div>
    <div class="span3">
      <div class="bs-docs">
        <h4 class="text-info" >You are not following:</h4>
        <div id="templist">
          <ul class="unstyled">
            <% @not_following.each do |user| %>
              <li><%= h user %> -
                <a onClick="window.location.reload( true );" href="/follow/<%= h user %>">follow</a>
                <a onClcik="window.location.reload( true );" href="/profile/<%= h user %>">details</a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="span3">
      <div class="bs-docs">
        <h4 class="text-info" >Following:</h4>
        <ul class ="unstyled">
          <% @following.each do |user| %>
            <li><%= h user %> -
              <a onClick="window.location.reload( true );" href="/unfollow/<%= h user %>">unfollow</a>
              <a onClick="window.location.reload( true );"href="/profile/<%= h user %>">details</a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="span3">
      <div class="bs-docs">
        <h4 class="text-info">Followers:</h4>
        <ul class="unstyled">
          <% @followed.each do |user| %>
            <li><%= huser %> -
              <a  onClick="window.location.reload( true);" href="profile/<%= h user %>">details</a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
